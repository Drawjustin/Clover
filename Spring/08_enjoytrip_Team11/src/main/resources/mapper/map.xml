<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.map.model.dao.MapDao">
	<resultMap type="SidoDto" id="sido">
		<result column="sido_code" property="sidoCode"/>
		<result column="sido_name" property="sidoName"/>
	</resultMap>
	
	<resultMap type="GugunDto" id="gugun">
		<result column="gugun_code" property="gugunCode"/>
		<result column="gugun_name" property="gugunName"/>
		<result column="sido_code" property="sidoCode"/>
	</resultMap>
	
	<resultMap type="AttractionInfoDto" id="attractioninfo">
		<result column="content_id" property="contentId"/>
		<result column="content_type_id" property="contentTypeId"/>
		<result column="title" property="title"/>
		<result column="addr1" property="addr1"/>
		<result column="addr2" property="addr2"/>
		<result column="zipcode" property="zipcode"/>
		<result column="tel" property="tel"/>
		<result column="first_image" property="firstImage"/>
		<result column="first_image2" property="firstImage2"/>
		<result column="readcount" property="readcount"/>
		<result column="sido_code" property="sidoCode"/>
		<result column="gugun_code" property="gugunCode"/>
		<result column="latitude" property="latitude"/>
		<result column="longitude" property="longitude"/>
		<result column="mlevel" property="mlevel"/>
	</resultMap>
	
	
	<select id="searchAllSido" resultMap="sido" >
		select *
		from sido
	</select>
	<select id="searchAllGugun" resultMap="gugun" parameterType="int">
		select *
		from gugun
		where sido_code = #{sidoCode}
	</select>
	<select id="search" resultMap="attractioninfo" parameterType="SearchAttractionDto">
		select *
		from attraction_info
		where 1
		<if test='sidoCode != null and sidoCode != ""'>
		and sido_code = #{sidoCode}
		</if>
		<if test='gugunCode != null and gugunCode != ""'>
		and gugun_code = #{gugunCode}
		</if>
		<if test='contentType != null'>
		and content_type_id in
		<foreach collection="contentType" item="item" separator="," open="(" close=")">
			#{item}
		</foreach>
		</if>
		<if test='searchWord != null'>
		and title like concat('%', #{searchWord}, '%')
		</if>
	</select>
</mapper>
